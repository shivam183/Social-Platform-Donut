            margin-right: 25%;
            margin-bottom: 2%;

        }

        .feed h2 {
            padding-left: 5%;
        }

        .feed hr {
            margin-left: 4%;
            margin-right: 4%;
            margin-top: -1%;
            height: 3px;
            background-color: cornflowerblue;
        }
        .feed h5 {
            padding-left: 5%;
            margin-top: -2%;
            color: grey;
        }

        .description {
            margin-left: 4%;
            height: 100px;
            font-size: 20px;
        }

        .feed ul li {
            list-style-type: none;
            display: inline;
        }

        .feed ul li i {
            font-size: 20px;
            padding-right: 4%;
            color: black;
        }


        @media(max-width: 750px) {
            .card {
                margin-top: 25%;
                margin-left: 0;
                float: none;

            }
            .profile {
